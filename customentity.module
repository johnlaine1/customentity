/**
 * Implements hook_entity_info().
 */
function customentity_entity_info() {
  $info = array();
  // The custom CustomEntity entity is defined here.
  // See http://drupal.org/node/1026420 and http://drupal.org/node/878804
  // for more documentation.
  $info['customentity'] = array(
    // Human readable label
    'label' => t('CustomEntity'),
    // Table for storing entity data, defined in hook_schema().
    'base table' => 'customentity',
    // This helps Entity API know how to query the custom table.
    'entity keys' => array(
      'id' => 'id',
      'label' => 'label',
    ),
    // A simple wrapper around the uri method in the controller class.
    'uri callback' => 'entity_class_uri',
    // Default class is 'Entity',
    'entity class' => 'CustomEntityEntity',
    // Default class is 'EntityAPIController',
    'controller class' => 'CustomEntityEntityController',
    // The information below is used to extend the EntityDefaultUIController.
    'admin ui' => array(
      'path' => 'admin/structure/customentity',
      'controller class' => 'CustomEntityEntityUIController',
      'menu wildcard' => '%customentity',
      'file' => 'customentity.admin.inc',
    ),
    'module' => 'customentity',
    // This controls who can access entity CRUD.
    'access callback' => 'customentity_access',
    'fieldable' => TRUE,
    'bundles' => array(
      'customentity' => array(
        'label' => t('CustomEntity'),
        'admin' => array(
          'path' => 'admin/structure/customentity',
          'access arguments' => array('administer customentity'),
        ),
      ),
    ),
    'views controller class' => 'EntityDefaultViewsController',
    'view modes' => array(
      'custom_view1' => array(
        'label' => t('Custom View 1'),
        'custom settings' => FALSE,
      ),      
    ),
  );
  return $info;
}

